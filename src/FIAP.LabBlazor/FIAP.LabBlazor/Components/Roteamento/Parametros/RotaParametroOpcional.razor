@page "/produtos/busca/{categoria?}"

<h3>Busca de Produtos</h3>
@if (!string.IsNullOrWhiteSpace(categoria))
{
    <p>Exibindo produtos da categoria: <b>@categoria</b></p>
}
else
{
    <p>Exibindo todos os produtos. Nenhuma categoria foi informada.</p>
}

@code {
    [Parameter]
    public string? categoria { get; set; }
}